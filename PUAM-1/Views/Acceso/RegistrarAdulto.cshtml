@model PUAM_1.Models.Adulto
@{
    Layout = null;
    List<SelectListItem> items = (List<SelectListItem>)ViewBag.Items;
}

<!DOCTYPE html>

<html>
<head>
    <title>PUAM-RegistroAdultos</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <!--Referencia al CSS-->
    <link href="~/css/registro.css" rel="stylesheet" />
</head>
<body>
    <div class="container h-100">
        <div class="d-flex justify-content-center h-100">
            <div class="user_card">
                <div class="d-flex justify-content-center">
                    <div class="brand_logo_container">
                        <!--REFERENCIA AL LOGO-->
                        <img src="https://seeklogo.com/images/U/universidad-central-del-ecuador-logo-C712012CF0-seeklogo.com.png" class="brand_logo" alt="Logo">
                    </div>
                </div>
                <div class="d-flex justify-content-center form_container">
                    <form action="@Url.Action("RegistrarAdulto","Acceso")" method="post">
                        <!--NOMBRE-->
                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="text" name="Nombres" class="form-control input_user" value="" placeholder="IngreseNombre">
                        </div>

                        <!--APELLIDO-->
                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="text" name="Apellidos" class="form-control input_user" value="" placeholder="IngreseApellido">
                        </div>
                        <!--CEDULA-->
                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-keyboard"></i></span>
                            </div>
                            <input type="text" name="Cedula" class="form-control input_user" value="" placeholder="Cedula">
                        </div>
                        <!--EDAD-->
                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-keyboard"></i></span>
                            </div>
                            <input type="number" name="Edad" class="form-control input_user" value="" placeholder="IngreseEdad">
                        </div>

                        <!--CELULAR-->
                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-keyboard"></i></span>
                            </div>
                            <input type="text" name="Celular" class="form-control input_user" value="" placeholder="IngreseCelular  ">
                        </div>
                        <!--PROGRAMA-->
                        <div class="form-group">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-keyboard"></i></span>
                                <select asp-for="IdPrograma" class="form-control" asp-items="ViewBag.Items">
                                    <option value="value1">Seleccione el Programa</option>
                                </select>
                            </div>
                        </div>
                        <!--CLAVE-->
                        <div class="input-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <!--en el name, nombre de la propiedad(atributo de la clase del modelo) a usar-->
                            <input type="password" name="Clave" class="form-control input_pass" value="" placeholder="Contraseña">
                        </div>

                        <div class="input-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" name="ConfirmarClave" class="form-control input_user" value="" placeholder="ConfirmarContraseña">
                        </div>
                        <!--mensaje de error -->
                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }

                        <div class="d-flex justify-content-center mt-3 login_container">
                            <button type="submit" name="button" class="btn login_btn">Registrarse</button>
                        </div>
                    </form>
                </div>

                <div class="mt-4">
                    <div class="d-flex justify-content-center links">
                        Ya tienes una cuenta? <a href="@Url.Action("LoginAdulto","Acceso")" class="ml-2">Iniciar Sesion</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</body>
</html>